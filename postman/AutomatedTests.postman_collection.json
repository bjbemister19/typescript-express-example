      "item": [
        {
          "name": "Should return 200 with healthy status",
          "item": [
            {
              "name": "GET /health",
              "event": [
                {
                  "listen": "test",
                  "script": {
                    "exec": [
                      "pm.test(\"Status code is 200\", () => {",
                      "    pm.response.to.have.status(200);",
                      "});",
                      "",
                      "pm.test(\"Response indicates healthy status\", () => {",
                      "    let body = pm.response.json();",
                      "    pm.expect(body.status).to.equal('success');",
                      "    pm.expect(body.data.status).to.equal('healthy');",
                      "});"
                    ],
                    "type": "text/javascript",
                    "packages": {}
                  }
                }
              ],
              "request": {
                "method": "GET",
